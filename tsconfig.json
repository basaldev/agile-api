{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "outDir":  "./dist",
    "paths": {
      "*": ["*"]
    },
    "lib": ["es6", "dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ]
}
